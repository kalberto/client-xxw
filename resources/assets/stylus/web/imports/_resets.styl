// 
// Resets
// 
html
	height 100%; font 100% "Lato", "Lucida Grande", Tahoma, sans-serif; color #313131;
body
	position relative; min-height 100%; margin 0; background #eee; font-family "Lucida Grande", Tahoma, sans-serif; font-size $body-size;

*, *:before, *:after
	-webkit-box-sizing: border-box; 
	-moz-box-sizing: border-box; 
	box-sizing: border-box;

ul
	margin 0; padding 0; list-style: none;

a
	text-decoration: none; color inherit;

h1,h2,h3,h4,h5,h6,p
	margin: 0px 0px 8px;