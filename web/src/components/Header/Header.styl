// Header

#header
	width 100%; flex-shrink 0; display flex; align-items center; justify-content space-between;
	&.aviso
		ul
			display: none;
	h1
		font 0/0 a; padding 45px 20px; max-width vw(380)
	ul
		display flex;
		li
			margin 0 8px;
			a
				display block; line-height vw(56); width vw(320); color #121341; font-size vw(20)
				background transparent; border 2px solid #121341; transition all 0.5s ease-in-out;
				text-align center; text-decoration none; text-transform uppercase; border-radius 5px
				font-weight $font-bold; padding 0 10px
				&:hover
					border-color $dourado2; background $dourado2; color #fff;
	.perfil
		align-self flex-start; display flex;
		.selo
			height 115px; flex-shrink 0
			h1
			 display none;
		.detalhes
			width 160px; margin-right 20px;
			p
				margin-bottom 10px
			a
				display block; color #787b85; text-transform uppercase;
				text-align center; font-weight $font-bold;
				display block; line-height vw(38); width vw(160); font-size vw(14);
				&.botao
					color #121341; text-decoration none; border-radius 5px
					background transparent; border 2px solid #121341; transition all 0.5s ease-in-out;
					&:hover
						border-color $dourado2; background $dourado2; color #fff;

+tablet-768()
	#header
		flex-flow row wrap; padding 40px 40px 20px;
		h1
			order 2; max-width 300px
		.perfil
			order 1;
			.detalhes
				a
					line-height rem(38); width 160px; font-size rem(14);
		ul
			order 3; width 100%; justify-content center;
			li
				a
					width 100%; line-height rem(38); font-size rem(15)

+mobile-600()
	#header
		padding 40px 20px 20px; justify-content center
		h1
			max-width 280px; display none;
		.perfil
			display flex;flex-direction column;margin-bottom 15px;
			.detalhes
				display flex; align-items center; width 100%;
				.botoes
					margin-left 20px;
			.selo
				display flex;
				h1
					padding 10px 10px;display block;
		ul
			flex-flow row wrap
			li
				width 100%; margin-bottom 10px
