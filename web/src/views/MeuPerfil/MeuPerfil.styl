// Meu perfil

#meuPerfil
	min-height 100vh; 
	.container
		display flex; align-items center; justify-content space-around; padding-top 50px
		.resultado
			h2
				font-size rem(36); line-height rem(36); color #121341; font-weight $font-medium;
				margin-bottom 30px;
			p
				font-size rem(20); color rgba(#0e1a35, 0.7)
			table
				border-collapse: collapse; margin-bottom 30px;
				tr
					&:not(:last-child)
						td
							border-bottom 1px solid rgba(#000, 0.1);
					td
						color rgba(#252860, 0.7); font-size rem(20); line-height 30px
						padding 20px vw(60); 
		.dados
			display flex; flex-direction column; max-width 385px; width 100%;
			p
				color #121341; font-size rem(16); margin-bottom 15px
			.group
				width 100%; position relative;
				span
					position absolute; bottom 14px; left 26px; color red; font-size rem(12)
				input
					padding 22px 26px; border 1px solid $dourado2; margin-bottom 20px;
					width 100%; background transparent; outline 0
					&:read-only
						border 0; background transparent
						transition all 0.5s ease
						&:placeholder
							color rgba(#121341, 0.87); 
				&:hover
					input
						&:read-only
							background #f9f9fb
				button
					position absolute; top 50%; right 20px; transform translateY(-50%); opacity 0; visibility hidden
				
				input:read-only + button
					opacity 1; visibility visible
				

+tablet-768()
	#meuPerfil
		.container
			flex-flow row wrap; justify-content center; padding 50px 20px;
			.resultado
				width 100%;
				h2
					margin 20px 0; text-align center;
				table
					margin 0 auto 30px
				p
					text-align center; margin-bottom 30px

+iphone-pro-max()
	#meuPerfil
		.container
			.resultado
				table
					tr
						display flex; flex-direction column;
						&:not(:last-child)
							td
								border-bottom 0 solid rgba(#000, 0.4);
						td
							padding 10px
							&:not(:last-child)
								border-right 0
							&:last-child
								border-bottom 1px solid rgba(#000, 0.4);