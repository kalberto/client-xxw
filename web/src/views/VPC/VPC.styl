// Home

#vpc
	min-height 100vh; padding-bottom 30px
	#filtro
		position fixed; left 0; top 0
	.container
		width 100%; padding 0 50px
	.saldos
		display flex; align-items center; justify-content center; max-width 900px; background #f9f9fb; margin 0 auto 50px
		li
			padding 16px 38px; list-style none; max-height 70px; width 100%;
			span, p
				color #4a4a4a
			p
				font-size rem(18); text-align left;
			span
				font-size rem(12); text-transform uppercase

	.status
		max-width 900px; width 100%; overflow-x overlay; overflow-y hidden; height 90px; margin 0 auto 50px; padding 0 20px
		display flex; align-items center;
		&::-webkit-scrollbar
			width: 4px; height 4px;
		&::-webkit-scrollbar-track
			background transparent
		&::-webkit-scrollbar-thumb
			background #85878b; border-radius 50px
		li
			position relative; width 250px; height 57px; display flex; align-items center; flex-shrink 0
			justify-content center; margin-right 5px
			p
				margin 0

			&:before, &:after
    			content ''; position absolute; left 50%; width 100%; height 50%; border-left 1px solid transparent; border-right 1px solid transparent;
			&:after
				bottom 0; border-bottom 1px solid transparent; transform: translateX(-50%) skew(-15deg);
			&:before
				top 0; border-top 1px solid transparent; transform: translateX(-50%) skew(15deg);
			&.pendente
				&:before, &:after
					border-color #121341
				p
					color #121341
			&.cancelado
				&:before, &:after
					border-color #868677
				p
					color #868677
			&.revisao
				&:before, &:after
					border-color #e4960f
				p
					color #e4960f
			&.reprovada
				&:before, &:after
					border-color #9b2239
				p
					color #9b2239
			&.aprovado
				&:before, &:after
					border-color $dourado
				p
					color $dourado
			&.comprovado
				&:before, &:after
					border-color #229b8e
				p
					color #229b8e
			&.pago
				&:before, &:after
					border-color #6bad1e
				p
					color #6bad1e

	h2
		color #20334d; font-size rem(31); line-height rem(31); font-weight $font-medium; text-align center;
		margin-bottom 10px
	h3
		color #20334d; font-size rem(18); line-height rem(18); font-weight $font-medium; text-align center;
		margin-bottom 10px
	p
		color #20334d; font-size rem(14); line-height rem(16); margin-bottom 40px; text-align center;
		.ponto
			margin 0 40px
	form
		max-width 600px; width 100%; margin 40px auto 0;
		ul
			display flex; align-items center; flex-flow row wrap; justify-content space-between; margin-top 30px;
			li
				border 1px solid #616161; width 49%; border-radius 50px; margin-bottom 10px
				display flex; align-items center; padding 10px 15px; justify-content space-between
				span
					color #616161; text-overflow: ellipsis; white-space: nowrap; overflow: hidden;
				.buttons
					display flex; align-items center; flex-shrink 0;
				a
					flex-shrink 0;
				button
					font-size 12px; border 2px solid #616161; width 20px; height 20px; line-height 13px; margin-left 5px
					color #616161; font-weight $font-bold; border-radius 50%; flex-shrink 0; display block;
		.group
			display flex; justify-content space-between; margin-bottom 30px
			._50
				flex-shrink: 0; width 49%;
			._100
				width 100%; flex-shrink 0;
			.input
				padding 20px; border 1px solid #f5ead7; background #fff; position relative;
				label
					position absolute; top -10px; font-size rem(14); left 20px; background-color white; color #444444
				span
					font-size rem(14); color #800000; position absolute; right 0; bottom -18px;
				textarea, input
					border 0; background transparent; width 100%; outline 0
					&::placeholder
						text-transform uppercase; color #444444
					&:disabled
						color: #6c757d;
				select
					width 100%; border 0; background transparent;
					font-size rem(14); font-weight $font-bold;
					outline 0; text-transform uppercase;
				textarea
					resize: none; height 150px;
			.file
				label
					padding 3px 3px 3px 20px; border 1px solid #f5ead7; background #fff; position relative; display block;
					display flex; align-items center; justify-content space-between; height 50px;
					span
						position absolute; top -10px; font-size rem(14); left 20px; color #444444
						&.error-span
							font-size rem(14); color #800000; position absolute; top auto; left auto; right 0; bottom -18px;
					p
						margin 0; font-size rem(14);
					div
						height 100%; background #f4f4f7; border-radius 10px; display block; padding 0 20px
						font-size rem(14); line-height 40px;cursor: pointer;
						&.grey-text
							color #6c757d;cursor:auto;
				input
					display none;

		.enviar
			text-align right;
			button
				color #be8f4d; text-transform uppercase; font-weight $font-bold; font-size rem(14);
				letter-spacing letterSpacing(30)
		.checkSaldo
			text-align right;
			button
				color #be8f4d; text-transform uppercase; font-weight $font-bold; font-size rem(14);
				letter-spacing letterSpacing(30); margin-bottom 30px;


+desktop-1680()
	#vpc
		padding-left 0px

+tablet-1024()
    #vpc
        .selo
            display none

+mobile-600()
	#vpc
		h2
			font-size rem(25)
		p
			span
				display block; margin 5px 0
			.ponto
				display none
		.saldos
			flex-flow row wrap; max-width 600px;
		.status
			max-width 340px;
		.container
			padding 0
		ul
			li
				&.ativo
					p
						max-height 200vh; transition none
		form
			padding 0 50px 80px
			.group
				flex-flow row wrap; margin-bottom 0
				._50
					width 100%;
				.input
					margin-bottom 20px;
				.file
					label
						flex-flow row wrap; height 90px; padding 15px 10px;
						div
							width 100%; height 40px; margin-top 10px
