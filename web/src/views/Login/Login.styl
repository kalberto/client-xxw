// Login

#login
    position fixed; width calc(50% - 35px); height calc(100% - 70px); top 35px; right 35px
    background-color $azul; background-image url('~@images/background/bg-formularios.jpg')
    background-position top right; background-repeat no-repeat; background-size contain
    overflow hidden; display flex; align-items center; justify-content center
    .svg-icon
        height 74%; width auto; top 50%; left 0; transform translate(-40%, -50%); position absolute;

+tablet-768()
    #login
        width 100%; height 70%; bottom 0; right 0; top auto; align-items flex-start;
        padding 80px 30px 0
        .svg-icon
            transform: translateX(-50%); top: auto;	left: 50%; bottom: -35%;

+iphone-pro-max()
    #login
        padding 30px 30px 0 

+iphone-x()
    #login
        .svg-icon
            bottom -43%