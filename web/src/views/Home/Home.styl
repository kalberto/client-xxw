// Home

// Transicao formularios
.formularios-enter-active, .formularios-leave-active
	transition all .5s ease

.formularios-enter, .formularios-leave-to
	opacity 0; visibility hidden

#home
	min-height 100vh; height 100vh; overflow-y hidden; display flex; align-items center; justify-content center
	img
		-webkit-user-drag: none; user-select none
	.modelo, .access, .sucesso
		transition all .5s ease;
	&.form
		.modelo, .access, .sucesso
			opacity 0; visibility hidden
	.access
		position fixed; top 35px; right: 35px; display flex; gap 20px
		.login
			a
				border 2px solid $dourado2; font-size rem(18); line-height 1; letter-spacing letterSpacing(-25);
				padding 15px 45px; cursor pointer; display inline-block; text-decoration none; color #111
				transition all 1s ease
				&:hover
					box-shadow inset 0 0 10px rgba($dourado3, .75)
	.relacionamento
		width percentage(615 / 1920); cursor pointer
	.modelo
		height percentage(889 / 1080); margin-top percentage(30 / 1080)
	.sucesso
		margin-left -40px;
		.saibamais
			text-align right; margin-top 50px
			a
				font-size rem(18); line-height 1; letter-spacing letterSpacing(-25); padding 15px 50px;
				cursor pointer; display inline-block; text-decoration none; color #fff;
				background linear-gradient(120deg, $dourado2, $dourado3, darken($dourado3, 15)); 
				background-size 200% 100%; transition all 1s ease
				&:hover
					background-position 100%
		h2
			font-family: americane-condensed, sans-serif; font-size vw(162); line-height .9; 
			font-weight $font-regular; text-transform uppercase; color $dourado3
			span
				font-family inherit; font-size vw(40); color $azul; letter-spacing letterSpacing(200); 
				display block; text-transform none; line-height 1
				&.right
					text-align right
			@supports (-webkit-text-fill-color: transparent)
				background linear-gradient(to right, $dourado2, $dourado3);	-webkit-background-clip text; 
				-webkit-text-fill-color transparent;
				span
					-webkit-text-fill-color $azul

+tablet-768()
	#home
		flex-direction column; justify-content flex-start; position relative;
		.relacionamento
			margin-top 15%;	max-width 500px; width 100%;
			&.login-mobile
				margin-top 8%; max-width 450px;
			&.cadastro
				margin-top 5%; max-width 300px;
		.sucesso
			order 2; margin-left 0; max-width 500px; width 100%;
			h2
				font-size rem(80); width 230px; margin 0 0 0 auto;
				span
					font-size rem(40)
			.saibamais
				text-align center;
		.modelo
			order 3;position absolute;	bottom -50%

+iphone-pro-max()
	#home
		padding 0 40px
		&.form
			padding 0; height auto;
			.modelo, .access, .sucesso
				display: none;
		.relacionamento
			margin-top 30%;
		.sucesso
			order 2; margin-left 0;
			h2
				font-size rem(60); margin 0 0 0 auto;
				span
					font-size rem(30)
			.saibamais
				text-align center; margin-top 20px
		.access
			top 20px; right 20px; gap 10px
			.login
				a
					padding 15px 10px;