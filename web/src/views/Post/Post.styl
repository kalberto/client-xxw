// Post

#post
    height 100vh; display flex;
    .container
        padding vw(100) 20px vw(60); width 100%;
    
    h2
        color $azul; font-size rem(30); max-width 550px; margin 0 auto; text-align center; line-height rem(31);
        font-weight: $font-medium; width 100%; margin-bottom vw(80)
        span
            font-size rem(20)

    .relacionados
        display flex; align-items center; justify-content center; margin 20px auto
        li
            margin 0 15px; display flex; max-width 280px
            .img
                width 128px; flex-shrink 0; margin-right 10px
                img
                    width 100%;
            .texto
                h3
                    font-size rem(14); line-height rem(21); color #515352;
                span
                    font-size rem(12); line-height rem(21); color #818181;

    .card
        max-width 1380px; width 100%; background #fff; box-shadow 0 0 40px 2px rgba(#000, 0.5); margin 0 auto;
        padding 40px 30px; position relative; overflow hidden; height 50vh
        .content
            display flex; align-items flex-start; justify-content space-between; max-height 50vh;
        .controls
            button
                display flex; align-items center; justify-content center; cursor pointer; position absolute; top 50%; transform translateY(50%)
                &.back
                    margin-right 40px; left -28px
                    img
                        margin-right 30px;
                &.next
                    margin-left 40px; right -28px
                    img
                        margin-left 30px; transform scale(-1)
        
        .content-wrapper
            max-width 100%; width 100%

        .medias
            width 490px; flex-shrink 0;
            .media
                margin-bottom 20px
                &.video
                    padding-top 56.25%; position relative
                    iframe, video
                        position absolute; top 0; left 0; width 100%; height 100%
            img, video, iframe
                width: 100%; max-width 100%
        .texto
            width 100%; padding 0 35px
            h3
                color $azul; text-transform uppercase; font-weight $font-regular; font-size rem(14); text-align center; 
            h4
                font-weight $font-regular; font-size rem(24); line-height rem(28); max-width 600px; text-align center; margin 15px auto
            .info
                display flex; justify-content center; align-items center; margin 30px 0
                img
                    margin 0 7px
                strong
                    color $azul; font-weight $font-regular; margin-right 5px;
                span
                    color #818181;
                &.evento
                    strong
                        color $azul;
                &.conteudo
                    strong
                        color #ad8244;
            .texto
                p
                    font-size rem(14); line-height rem(24)
            ul
                li
                    padding 10px 35px
                    a
                        color #ad8244; 
        
        .documentos
            .documento
                padding 10px 0
            .download
                background linear-gradient(45deg, rgba(#cbaf89, 0.9), rgba(#ad8244, 0.9), rgba(#ad8244, 0.9), rgba(#cbaf89, 0.9)); 
                background-size 200%; background-position right center; display flex; cursor pointer; transition all 0.5s ease-in-out
                max-width 370px; width 100%; line-height rem(60); color #fff; font-size rem(15); font-weight $font-bold
                border-radius 100px; padding 0 25px; justify-content space-between; align-items center; text-decoration none
                margin 0 auto
                span
                    max-width 80%; text-overflow ellipsis; overflow hidden; white-space nowrap
                svg
                    width 24px; height 24px
                &:hover
                    background-position 0%
        
        .participar
            background $azul; background-size 200%; background-position left center; display block; cursor pointer; transition all 0.5s ease-in-out
            width 250px; margin 30px auto 0; line-height rem(60); color #fff; font-size rem(15); font-weight $font-bold; text-transform uppercase;
            &:hover
                background-position 100%

+desktop-1366()
    #post
        .container
            padding 70px 90px 60px;

+desktop-1024()
    #post
        .selo
            display none
        .container
            padding 70px 20px 60px 50px;
        .card
            flex-flow row wrap;
            .controls
                button
                    top: 30px;
                    &.back
                        left: 40%; 
                    &.next
                        right 40%;
            .content
                flex-flow row wrap;
                .medias
                    order 2; width 100%; padding 40px 70px
                .texto
                    order 1; width 100%;

+tablet-1024()
    #post
        .selo
            display none
        .relacionados
            display none
        .card
            flex-flow row wrap; height 80vh
            .controls
                button
                    top: 30px;
                    &.back
                        left: 37%; 
                    &.next
                        right 37%;
            .content
                flex-flow row wrap; height 80vh
                .medias
                    order 2; width 100%; padding 40px 70px
                .texto
                    order 1; width 100%;

+iphone-pro-max()
    #post
        .container
            padding vw(100) 40px vw(60);
        h2
            font-size rem(16); line-height rem(24)
        .card
            padding 40px 5px
            .controls
                button
                    top: 30px;
                    &.back
                        left: 20px; 
                    &.next
                        right 20px;
            .medias
                padding 20px 15px
            .texto
                padding 0 15px
                .info
                    flex-flow row wrap
                    strong
                        font-size 12px
                        &:first-child
                            width 21%
                    span
                        font-size 12px

            .documentos
                .download
                    max-width 235px