// Bem vindo

#bemVindo
    position fixed; width calc(50% - 35px); height calc(100% - 70px); top 35px; right 35px
    background-color $azul; background-image url('~@images/background/bg-formularios.jpg')
    background-position top right; background-repeat no-repeat; background-size contain
    overflow hidden; display flex; align-items center; justify-content center
    .svg-icon
        height 74%; width auto; top 50%; left 0; transform translate(-40%, -50%); position absolute;
    p
        color #fff; max-width 500px; margin 0 auto 70px; font-size rem(18); line-height rem(33); text-align center;
    .link
        margin-bottom 35px
        a
            font-size rem(18); line-height 58px; letter-spacing letterSpacing(-25);
            cursor pointer; display block; text-decoration none; color #fff
            background linear-gradient(to bottom, transparent 50%, $dourado2 50%);
            background-size 100% 200%; background-position bottom; transition all 0.3s ease; max-width 380px; text-align center;
            width 100%; text-transform uppercase; margin 0 auto; border 1px solid $dourado;
            &:hover
                background-position top


+tablet-768()
    #bemVindo
        width 100%; height 60%; bottom 0; right 0; top auto; align-items flex-start;
        padding 80px 30px 0
        .svg-icon
            transform: translateX(-50%); top: auto;	left: 50%; bottom: -35%;

+iphone-pro-max()
    #bemVindo
        padding 30px 30px 0 

+iphone-plus()
    #bemVindo
        height 55%; 
        p
            margin 0 auto 10px
        .link
            margin-bottom 10px

+iphone-x()
    #bemVindo
        .svg-icon
            bottom -43%